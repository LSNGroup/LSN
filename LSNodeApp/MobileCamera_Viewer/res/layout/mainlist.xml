<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="#ff757575" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
  
    <RelativeLayout android:id="@+id/sub_layout1" android:background="#ffb5b5b5" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <Button android:id="@+id/refresh_btn" android:layout_width="140.0dip" android:layout_height="wrap_content" android:layout_marginTop="4.0dip" android:text="@string/ui_refresh_btn" android:layout_alignParentLeft="true" />
        <Button android:id="@+id/exitapp_btn" android:layout_width="140.0dip" android:layout_height="wrap_content" android:layout_marginTop="4.0dip" android:text="@string/ui_exitapp_btn" android:layout_alignParentRight="true" />
    </RelativeLayout>
    
    <RelativeLayout android:id="@+id/sub_layout2" android:background="#ff707070" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_alignParentTop="true">
        <ImageView android:id="@+id/top_img" android:layout_width="fill_parent" android:layout_height="wrap_content" android:src="@drawable/top" android:layout_centerHorizontal="true" />
    </RelativeLayout>
    
    <RelativeLayout android:id="@+id/sub_layout3" android:background="#ffb5b5b5" android:paddingLeft="10.0dip" android:paddingRight="10.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@id/sub_layout2" >
        <Button android:id="@+id/addcam_btn" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/ui_addcam_btn" />
    </RelativeLayout>
    
    <ListView android:id="@android:id/list" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_above="@id/sub_layout1" android:layout_below="@id/sub_layout3" />
    <TextView android:id="@android:id/empty" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/msg_empty_addcam_first" android:gravity="center" android:layout_above="@id/sub_layout1" android:layout_below="@id/sub_layout3" />

</RelativeLayout>
